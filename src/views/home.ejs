<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
      integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
      crossorigin="anonymous">
  </head>
  <style>
        .table-container {
            padding: 15px 20px;
        }

        .title {
            font-size: 25px;
            font-weight: 600;
            padding-bottom: 10px;
        }

        table {
          border-collapse: collapse;
          width: 100%;
        }
        th, td {
          padding: 8px;
          text-align: left;
          border-bottom: 1px solid #ddd;
        }
        tr:hover {background-color: #ccc;}
        </style>

  <body>
    <div class="topnav">
      <a class="active" href="/">Home</a>
      <a href="/create">Create users</a>
    </div>
    <div class="table-container">
      <!-- <%= JSON.stringify(listUsers) %> -->
      <div class="title">List Users</div>
      <table>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>City</th>
          <th>Actions</th>
        </tr>

        <!-- <% for (var i = 0; i < listUsers.length; i++) { %>
        <tr>
          <td>
            <%= listUsers[i].id %>
          </td>

          <td>
            <%= listUsers[i].email %>
          </td>

          <td>
            <%= listUsers[i].name %>
          </td>

          <td>
            <%= listUsers[i].city %>
          </td>

          <td>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
        <% } %> -->

        <% listUsers.forEach(function(user) { %>
        <tr>
          <td>
            <%= user.id %>
          </td>

          <td>
            <%= user.email %>
          </td>

          <td>
            <%= user.name %>
          </td>

          <td>
            <%= user.city %>
          </td>

          <td>
            <a class="btn btn-success" href="/update/<%= user.id %>"
              role="button">Edit</a>
            <a class="btn btn-danger" href="/delete-user/<%= user.id %>"
              role="button">Delete</a>
            <!-- <a href="/update/<%= user.id %>">Edit</a> -->
            <!-- <form action="/delete-user/<%= user.id %>" method="post">
                <button>Delete</button>
              </form> -->
            <!-- <a href="/delete-user/<%= user.id %>">Delete</a> -->
          </td>
        </tr>
        <% }); %>

      </table>
    </div>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js">
    </script>
  </body>
</html>